<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.gymcarry.dao.BoardDao">

    <!-- 게시판 전체 출력 -->
    <select id="selectBoardList" resultType="com.project.gymcarry.board.BoardDto">
		<![CDATA[
        select *
        from board
        where postidx > 0
        order by postidx desc, postdate desc
        ]]>
	</select>

    <!-- 게시판 내용 출력-->
    <select id="getBoardContent" resultType="com.project.gymcarry.board.BoardDto" parameterType="com.project.gymcarry.board.BoardDto">
        select *
        from board
        where postidx = #{postidx}
    </select>

    <!-- 페이징 -->
    <select id="getBoardList" resultType="com.project.gymcarry.board.BoardDto">
        select *
        from board
        LIMIT #{startList}, #{listSize}
    </select>

    <!-- 페이징 : 전체 글의 개수 읽어오기 -->
    <select id="getBoardListCnt" resultType="int">

        select count(*) as listCnt
        from board
    </select>

    <!-- 조회수 -->
    <update id="updateViewCnt" parameterType="com.project.gymcarry.board.BoardDto">
        UPDATE board SET
            postview = postview + 1
        WHERE
            postidx = #{postidx}
    </update>











</mapper>