<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.gymcarry.dao.CarryDao"> 

<resultMap type="com.project.gymcarry.carry.CarryDto" id="carryDtoMap">
<id column="cridx" property="cridx"/>
<result column="" /> 

</resultMap>

	<!-- 캐리 정보 출력 -->
	<select id="selectCarryDetail"
		resultMap="carryDtoMap">
		<!-- resultType="com.project.gymcarry.carry.CarryDto" -->
		select * from carry c, place p
		where c.placeidx=p.placeidx and c.cridx=#{cridx}
	</select>

	<!-- 캐리 리뷰 리스트 출력 -->
	<select id="selectCarryReviewList"
		resultType="com.project.gymcarry.carry.CarryReviewDto">
		select * from carryreview r, member m, carry c where m.memidx = r.memidx and c.cridx=r.cridx and c.cridx=#{cridx}
		<!-- select * from carry c inner join carryreview r on r.cridx=c.cridx and c.cridx=#{cridx} -->
	</select>
	

</mapper>